
<section class="todoapp" xmlns="http://www.w3.org/1999/html">
    <header class="header">
        <h1>todos</h1>
        <form action="/save" method="post">  <input class="new-todo" name="tas" placeholder="What needs to be done?" autofocus></form>
    </header>
    <!-- This section should be hidden by default and shown when there are todos -->
    <section class="main">

        <input id="toggle-all" class="toggle-all" type="checkbox">

        <label for="toggle-all">Mark all as complete</label>
        <ul class="todo-list">
            <!-- These are here just to show the structure of the list items -->
            <!-- List items should get the class `editing` when editing and `completed` when marked as completed -->
           {{# each items}}

               <li
               {{#if this.status}}
                       class="completed"
               {{/if}}

                       ondblclick="foo(this ,'{{this.text}}', '{{this.id}}'  )"
               >
                   <div class="view">

                       <input class="toggle" type="checkbox"
                           {{#if this.status}}
                          checked
                           {{/if}}
                              onchange="window.location.href='/update/{{this.id}}'"
                       >

                       <label  >{{this.text}}</label>









                       <button onclick="window.location.href='/delete/{{this.id}}'" class="destroy"></button>
                   </div>
                   <input class="edit" value="Create a TodoMVC template">
               </li>
           {{/each}}

        </ul>
    </section>
   <script>

   </script>
    <!-- This footer should hidden by default and shown when there are todos -->
    <footer class="footer">
        <!-- This should be `0 items left` by default -->
        <span class="todo-count"><strong>{{coun}}</strong> item left</span>
        <!-- Remove this if you don't implement routing -->
        <ul class="filters">
            <li>
                <a class="selected" href="/">All</a>
            </li>
            <li>
                <a href="/active">Active</a>
            </li>
            <li>
                <a href="/complete">Completed</a>
            </li>
        </ul>
        <!-- Hidden if no completed items are left ↓ -->
        <button onclick="window.location.href='/completed'" class="clear-completed">Clear completed</button>
    </footer>
</section>
